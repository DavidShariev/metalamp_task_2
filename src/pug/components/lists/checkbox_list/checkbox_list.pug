mixin checkbox_list(className, title='list', checkboxTitles = [], rich=false)
    
    div(class='checkbox-list list list--closed ' + className)
        h3.checkbox-list__title=title
            <svg class="input_dropdown-icon" width="12" height="8" viewBox="0 0 12 8" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M10.5938 0.578125L12 1.98438L6 7.98438L0 1.98438L1.40625 0.578125L6 5.17188L10.5938 0.578125Z" fill="#1F2041" fill-opacity="0.5"/>
            </svg>  
        if(checkboxTitles.length > 0)
            ul.checkbox__list-items.list__items
                each title in checkboxTitles
                    li
                        if(rich)
                            +rich_checkbox("checkbox-list__item", title[0], title[1], className+'_group', title)
                        else
                            +checkbox("checkbox-list__item", title, className+'_group', title)